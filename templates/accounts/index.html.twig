{% extends 'base.html.twig' %}

{% block title %}Accounts index{% endblock %}

{% block body %}
    <h1>Accounts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.name }}</td>
                <td>{{ account.address }}</td>
                <td>
                    <a href="{{ path('accounts_show', {'id': account.id}) }}">show</a>
                    <a href="{{ path('accounts_edit', {'id': account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('accounts_new') }}">Create new</a>
{% endblock %}
